<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Application7.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    
    <header style="background-color:yellow;">
        
       
        <nav style="background-color:yellow;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ">
            
            <div style="background-color:yellow;" class="container">
                


                <a class="navbar-brand" asp-area="" asp-page="/Index">Application7.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Options</a>
                            <div class="dropdown-menu" style="background-color:greenyellow">
                               
                                <a class="dropdown-item"
                                   asp-area="MenuItems" asp-controller="Categories" asp-action="Index">
                                    Categories
                                </a>
                                <a class="dropdown-item"
                                   asp-area="MenuItems" asp-controller="MenuItems" asp-action="Index">
                                    Menu Items
                                </a>
                                <a class="dropdown-item"
                                   asp-area="MenuItems" asp-controller="Guests" asp-action="Index">
                                    Customers
                                </a>
                                <a class="dropdown-item"
                                   asp-area="MenuItems" asp-controller="OrderInformations" asp-action="Index">
                                    Order Information
                                </a>
                                <a class="dropdown-item"
                                   asp-area="MenuItems" asp-controller="OrderMenus" asp-action="Index">
                                    Book a Table
                                </a>


                            </div>
                        </li>



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Application7.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
